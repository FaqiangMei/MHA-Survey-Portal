<!-- Admin Navigation Header -->
<header class="app-header">
  <div class="header-content">
    <div class="header-left">
      <div class="logo">
        <div class="logo-icon" aria-hidden="true"></div>
        <div class="logo-text">
          TEXAS A&M<br>
          UNIVERSITY
        </div>
      </div>
      
      <nav class="nav-links">
        <a href="<%= admin_dashboard_path %>" class="nav-link <%= 'active' if local_assigns[:active_page] == 'home' %>">Home</a>
        <%= link_to "Student Records", student_records_path,
          class: "nav-link #{'active' if local_assigns[:active_page] == 'students'}" %>
        <%= link_to "Surveys", admin_surveys_path,
          class: "nav-link #{'active' if local_assigns[:active_page] == 'surveys'}" %>
        <a href="#" class="nav-link">Reports</a>
      </nav>
    </div>
    
    <div class="user-section">
      <span class="role-badge admin">ADMIN</span>
  <div class="notification-area">
        <%= render "shared/notification_menu" %>
      </div>
      <div class="user-profile">
        <div class="user-avatar"
             role="img"
             aria-label="<%= avatar_aria_label(current_user) %>"
             <% if current_user&.avatar_url.present? %>
               style="background-image: url('<%= current_user.avatar_url %>');"
             <% end %>>
          <% unless current_user&.avatar_url.present? %><span aria-hidden="true">üë§</span><% end %>
        </div>
        
        <!-- Profile Dropdown -->
        <div class="profile-dropdown">
          <div class="profile-header">
            <div class="user-avatar"
                 role="img"
                 aria-label="<%= avatar_aria_label(current_user) %>"
                 <% if current_user&.avatar_url.present? %>
                   style="background-image: url('<%= current_user.avatar_url %>');"
                 <% end %>>
              <% unless current_user&.avatar_url.present? %><span aria-hidden="true">üë§</span><% end %>
            </div>
            <div class="profile-info">
              <h3><%= current_user&.name || "Admin User" %></h3>
              <p><%= current_user&.email %></p>
            </div>
          </div>
          <div class="profile-menu">
            <div class="profile-menu-item">
              <div class="profile-menu-icon" aria-hidden="true">üë§</div>
              <span>Account Information</span>
            </div>
            <div class="profile-menu-item">
              <div class="profile-menu-icon" aria-hidden="true">‚öôÔ∏è</div>
              <span>Settings</span>
            </div>
            <%= link_to destroy_user_session_path,
                        method: :delete,
                        class: "profile-menu-item danger" do %>
              <div class="profile-menu-icon" aria-hidden="true">üö™</div>
              <span>Sign Out</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
