<% content_for :title, "About the Portal" %>

<%= render "shared/login_navbar" %>

<main class="flex justify-center px-4 py-12">
  <div class="w-full max-w-5xl space-y-8">
    <!-- Page header -->
    <section class="rounded-3xl bg-white px-8 py-10 shadow-sm ring-1 ring-slate-200">
      <h1 class="text-3xl font-semibold text-[#500000]">About the Portal</h1>

